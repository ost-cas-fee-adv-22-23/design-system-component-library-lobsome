{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "declaration": true,
    "strict": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}